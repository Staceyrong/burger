


  
  
    <!-- Page Container -->
    <div class="container">
      
      <br>

      <!-- Burger Image -->
      <center>
        <div class="row">
          <img src="/assets/images/burger.jpg">
        </div>
      </center>

      <!-- Page Title -->
      <center>
        <h1 class="title">Eat-Da-Burger!</h1>
      </center>
      
      <br>

      <!-- Burger Content Div -->
      <div class="row">
        {{!-- <center> --}}
          <!-- Left side (ready to eat) -->
          <div class="col-md-6">
            
            <div id="ready_to_eat">
              {{#each burgers}}
              {{#unless devoured}}
              <form action="burger/eat/{{id}}" method="POST">
                <div class="input-group">
                  <li class="form-control" >{{burger_name}}</li>
                    <span class="input-group-btn">
                      <button class="btn btn-success devour-button" id-data={{id}} >Devour It!</button>
                    </span>
                </div>
              </form>
              {{/unless}}
            {{/each}}
            </div>
          </div>

          <!-- Right side (already eaten) -->
          <div class="col-md-6">
    
            <div id="already_eaten">
              {{#each burgers}}
              {{#if this.devoured}}
                <div class="input-group">
                  <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
                </div>
              {{/if}}
            {{/each}}
            </div>
          </div>
        {{!-- </center> --}}
      </div>

      <br><br>

      <!-- Input New Burgers Box -->        
      <div class="row">

        <!-- Empty Div to help center textarea -->
        <div class="col-md-3"></div> 

        <!-- Burger Input Box -->
        <div class="form-group col-md-6 text-center">
          <center><label class="title">Enter your burger!</label>
          <textarea class="form-control" columns="8" rows="4" id="new_burger"></textarea></center>
        </div>

        <!-- Empty Div to help center textarea -->
        <div class="col-md-3"></div> 

      </div>
    
      <!-- Submit Button -->
      <center>
        <button id="submit-button" type="button" class="btn btn-danger">Submit</button>
      </center>

    </div>
    

